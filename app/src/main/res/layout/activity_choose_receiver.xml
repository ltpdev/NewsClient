<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose_receiver"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.gdcp.newsclient.kuaichuan.ui.ChooseReceiverActivity">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tv_top_tip"
    android:textSize="16sp"
    android:text="点击接收者头像连接"
    android:gravity="center"
    android:textColor="@android:color/white"
    android:padding="10dp"
    android:textStyle="bold"/>
<com.gdcp.newsclient.kuaichuan.view.RadarScanView
    android:layout_width="160dp"
    android:layout_height="160dp"
    android:id="@+id/radarView"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/tv_top_tip"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"/>
    <ListView
        android:id="@+id/lv_result"
        android:layout_below="@+id/radarView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
    </ListView>
</RelativeLayout>
