<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_choose_file"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gdcp.newsclient.kuaichuan.ui.ChooseFileActivity">
    <android.support.design.widget.TabLayout
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabIndicatorHeight="2dp"
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextColor="@android:color/black"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabMode="fixed">
    </android.support.design.widget.TabLayout>
<android.support.v4.view.ViewPager
    android:layout_below="@+id/tab_layout"
    android:layout_above="@+id/bottom_bar"
    android:id="@+id/view_pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
</android.support.v4.view.ViewPager>
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <Button
            android:layout_width="128dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:id="@+id/btn_selected"
            android:text="已选(0)"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/selector_bottom_text_common"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <Button
            android:layout_width="128dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:id="@+id/btn_next"
            android:text="下一步"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:background="@drawable/selector_bottom_text_next"/>
</LinearLayout>
    </LinearLayout>
</RelativeLayout>
